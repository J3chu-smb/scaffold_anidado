<p id="notice"><%= notice %></p>

<h1 style="align-center">Playlists</h1>
<hr>
<%= link_to 'New Playlist', new_playlist_path, class:'btn btn-sm btn-outline' %>
<table class="table table-striped mt-4 table-responsive-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Songs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.name %></td>
        <td><%= playlist.user.name %></td>
        <td><%= playlist.songs.count %></td>
        <td><%= link_to 'Show', playlist, class:'btn btn-sm' %></td>
        <td><%= link_to 'Edit', edit_playlist_path(playlist), class:'btn btn-sm' %></td>
        <td><%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
