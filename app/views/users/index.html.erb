<p id="notice"><%= notice %></p>

<h1>Users</h1>
<hr>
<%= link_to 'New User', new_user_path, class:'btn btn-sm btn-outline' %>
<div class="row align-items-center">
<table class="table table-striped mt-4 table-responsive-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Playlists</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.playlists.count %></td>
        <td><%= link_to 'Show', user, class:'btn btn-sm btn-outline' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:'btn btn-sm btn-outline' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-sm btn-outline' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
